version: "3.9"

services:
  db:
    image: postgres:16
    container_name: zus_symulator_emerytalny_db
    environment:
      POSTGRES_DB: zus_symulator_emerytalny
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: postgres
    ports:
      - "5432:5432"
    volumes:
      - pg_data:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U postgres -d zus_symulator_emerytalny"]
      interval: 5s
      timeout: 5s
      retries: 10
    restart: unless-stopped

volumes:
  pg_data:
